<div class="main">
  <div class="container">
    <h2 class="border-bottom border-white mb-4">ユーザー登録</h2>
    <div class="card">
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group">
            <%= f.label :name, "ユーザー名" %>
            <%= f.text_field :name, class: "form-control", autofocus: true, placeholder: "ユーザー名", required: true%>
          </div>

          <div class="form-group">
            <%= f.label :email, "メールアドレス" %>
            <%= f.email_field :email, class: "form-control", autofocus: true, placeholder: "メールアドレス", required: true%>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="form-group">
            <%= f.label :password, "パスワード (#{@minimum_password_length}文字以上)" %>
            <%= f.password_field :password, class: "form-control", autocomplete: "off", minlength: @minimum_password_length, placeholder: "パスワード (#{@minimum_password_length}文字以上)", required: true%>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, "パスワード確認" %>
            <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off", minlength: @minimum_password_length, placeholder: "パスワード (確認)", required: true%>
          </div>

          <div class="actions">
            <%= f.submit "登録する", class: "btn btn-primary float-right" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
