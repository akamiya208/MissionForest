  </div>

  <div class="form-group">
    <%= f.label :description, '概要 <span style="color: red">(必須)</span>'.html_safe %>
    <%= f.text_area :description, class: "form-control", placeholder: "ミッション概要", required: true%>
  </div>

  <div class="actions">
    <%= f.submit "作成する", class: "btn btn-primary float-right" %>
  </div>
<% end %>
